
@{
    ViewData["Title"] = "RuKuShow";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>入库显示</h1>

<table class="table table-bordered">
    <tr>
        <td>入库清单编号</td>
        <td>入库清单时间</td>
        <td>入库清单负责人</td>
        <td>操作</td>
    </tr>
    <tbody id="ag"></tbody>
</table>

<script>
    //文档就绪函数
    $(function () {
        Show();
    })
    //显示
    function Show()
    {
        $.ajax({
            url: "http://localhost:65365/Guan/RuchecklistShow",
            type: "get",
            success: function (d)
            {
                $.each(d, function () {
                    var str = '<tr>'
                        + '<td>' + this.ruchecklistCode + '</td>'
                        + '<td>' + this.ruchecklistTime + '</td>'
                        + '<td>' + this.ruchecklistPeople + '</td>'
                        + '<td><input id="Button1" type="button" value="查看详情" class="btn btn-info" onclick="RuchecklistDeit(' + this.ruchecklistId + ')"/></td>'
                        + '</tr>'
                    $("#ag").append(str);
                })
            }
        })
    }
    //跳转到库位详细表
    function RuchecklistDeit(id)
    {
        location.href ='/Guan/LocationWithShow?id='+id
    }
</script>

