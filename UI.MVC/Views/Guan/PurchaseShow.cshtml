
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="~/js/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>采购订单表</title>
</head>
<body>
    <table class="table table-bordered">
        <tr>
            <td>用户ID</td>
            <td>信息ID</td>
            <td>订单编号</td>
            <td>订单时间</td>
            <td>操作</td>
        </tr>
        <tbody id="ag"></tbody>
    </table>
</body>
</html>

<script>
    //文档就绪函数
    $(function () {
        Show();
    })
    //显示
    function Show()
    {
        $.ajax({
            url: "http://localhost:65365/Guan/PurchaseShow",
            type: "get",
            success: function (d)
            {
                $.each(d, function () {
                    var str = '<tr>'
                        + '<td>' + this.purchaseUid + '</td>'
                        + '<td>' + this.purchasePid + '</td>'
                        + '<td>' + this.purchaseCode + '</td>'
                        + '<td>' + this.purchaseTime + '</td>'
                        + '<td><input id="Button1" type="button" value="查看详情"  class="btn btn-info" onclick="Deit(' + this.purchaseId + ')"/></td>'
                        + '</tr>'
                    $("#ag").append(str);
                })
            }
        })
    }
    //跳转到详情页面
    function Deit(id)
    {
        location.href = '/Guan/PurchaseDeit?id=' + id;
    }
</script>
